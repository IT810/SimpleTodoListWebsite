<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <link href="~/Content/assets/css/style.css" rel="stylesheet">
    <link href="~/Content/assets/css/style-responsive.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/assets/css/to-do.css">
    <link href="~/Content/alertify/css/themes/default.min.css" rel="stylesheet" />
    <link href="~/Content/alertify/css/alertify.min.css" rel="stylesheet" />
</head>

<body>
    <section id="container">
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <a href="@Url.Action("Index", "Home")" class="logo"><b>My-Tasks</b></a>
            <div class="top-menu">
                <ul class="nav pull-right top-menu">
                    <li><a class="logout" href="login.html">Đăng xuất</a></li>
                </ul>
            </div>
        </header>

        <aside>
            <div id="sidebar" class="nav-collapse ">
                <ul class="sidebar-menu" id="nav-accordion">
                    <p class="centered"><a href="profile.html"><img src="~/Content/assets/img/ui-sam.jpg" class="img-circle" width="60"></a></p>
                    <h5 class="centered">@Session["uname"]</h5>
                    <li class="mt">
                        <a href="@Url.Action("Index", "Home")" class="active">
                            <i class="fa fa-tasks"></i>
                            <span>Danh sách nhiệm vụ</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-history"></i>
                            <span>Lịch sử xóa</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <section id="main-content" style="min-height:100vh">
            @RenderBody()
        </section>
        <footer class="site-footer">
            <div class="text-center">
                2021 - MyTasks
                <a href="todo_list.html#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
    </section>

    <script src="~/Content/assets/js/jquery.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Content/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/common-scripts.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="~/Content/assets/js/tasks.js" type="text/javascript"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Content/alertify/alertify.min.js"></script>

    <script>
        jQuery(document).ready(function () {
            TaskList.initTaskWidget();
        });

        $(function () {
            $("#sortable").sortable();
            $("#sortable").disableSelection();
        });
    </script>

    <script>
        $(function () {
            $('select.styled').customSelect();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>